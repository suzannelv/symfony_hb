{% extends 'base.html.twig' %}

{% block title %}Tous les articles{% endblock %}

{% block body %}

<h1 class="mt-4 text-center font-fold text-3xl">Liste de tous les articles</h1>
  


<ul class="flex justify-center items-center mx-auto flex-col space-y-4 text-center text-gray-500 dark:text-gray-400">
<a href="{{path('article_form')}}" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800"> Créer un article</a>
  {% for message in app.flashes('success') %}
    <div class="flash-success bg-green-200 text-green-700">
        {{ message }}
    </div>
    {% endfor %}
  {% for article in articles %}
    <li class="flex items-center space-x-3 rtl:space-x-reverse">
         <svg class="flex-shrink-0 w-3.5 h-3.5 text-green-500 dark:text-green-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 16 12">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5.917 5.724 10.5 15 1.5"/>
         </svg>
        <a href="{{ path('item', {id: article.id}) }}">{{article.title}}</a>
        <a href="{{ path('article_update', {id: article.id}) }}">Modifier</a>
        <a href="{{ path('article_delete', {id: article.id}) }}">Supprimer</a>


    </li> 
    {% else %}
    <p> Aucun article trouvé </p>
  {% endfor %}
</ul>

<div class="navigation text-center mt-5">
    {{ knp_pagination_render(articles) }}
</div>
{% endblock %}
